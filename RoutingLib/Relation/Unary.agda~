
open import Data.Product using (_×_)
open import Relation.Unary

module RoutingLib.Relation.Unary where

  -----------------------
  -- To push to stdlib --
  -----------------------

  _Preserves_ : ∀ {a p} {A : Set a} → (A → A) → Pred A p → Set _
  f Preserves P = ∀ {a} → P a → P (f a)

  _Preserves₂_ : ∀ {a p} {A : Set a} → (A → A → A) → Pred A p → Set _
  f Preserves₂ P = ∀ {a b} → P a → P b → P (f a b)
  

  _Forces_ : ∀ {a p} {A : Set a} → (A → A) → Pred A p → Set _
  f Forces P = ∀ {a} → P (f a) → P a

  _Forces₂_ : ∀ {a p} {A : Set a} (_•_ : A → A → A) (P : A → Set p) → Set _
  _•_ Forces₂ P = ∀ {a b} → P (a • b) → P a × P b
