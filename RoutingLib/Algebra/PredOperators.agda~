
open import Data.Product using (_×_)
open import Algebra.FunctionProperties.Core using (Op₂)

module RoutingLib.Algebra.PredOperators where

  _Preserves_ : ∀ {a p} {A : Set a} (_•_ : Op₂ A) (P : A → Set p) → Set _
  _•_ Preserves P = ∀ {a b} → P a → P b → P (a • b)  
  
  _Forces_ : ∀ {a p} {A : Set a} (_•_ : Op₂ A) (P : A → Set p) → Set _
  _•_ Forces P = ∀ {a b} → P (a • b) → P a × P b
